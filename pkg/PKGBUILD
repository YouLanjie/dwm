# Maintainer: Chglish
pkgname=local-dwm
pkgver=6.3.1
pkgrel=4
epoch=
pkgdesc="Dwm - 轻量级桌面管理器"
arch=('x86_64' 'i686')
url="https://github.com/youlanjie/dwm"
license=('MIT')
groups=("local-built")
depends=('libx11' 'libxinerama' 'libxft')
makedepends=('git' 'gcc' 'make' 'glibc')
checkdepends=()
optdepends=('feh: 设置壁纸'
	    'dunst: 通知服务'
	    'libnotify: 发送通知'
	    'scrot: 截图'
	    'zenity: 中文输入窗口'
	    'xdotool: 中文输入控制'
	    'copyq: 剪贴板管理器'
	    'xorg-xsetroot: 脚本调用'
	    'xorg-setxkbmap: 脚本调用'
	    'utools: 脚本调用'
	    'playerctl: 多媒体控制'
	    'fcitx5: 输入法'
	    'kservice: 构建menu缓存'
	    'polkit-kde-agent: 身份验证服务')
provides=(dwm)
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("dwm::git+https://github.com/youlanjie/dwm.git")
noextract=()
sha256sums=('SKIP')
validpgpkeys=()

build() {
	cd "dwm"
	make
}

package() {
	cd "dwm"
	make DESTDIR="$pkgdir/" install
}
